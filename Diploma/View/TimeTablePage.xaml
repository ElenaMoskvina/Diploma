<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Diploma.View"
             x:Class="Diploma.View.TimeTablePage"
             Title="TimeTablePage">
    <VerticalStackLayout>
        <DatePicker x:Name="datePicker"
                 
                    MinimumDate="2025,1,1"
                    />
        <TimePicker x:Name="timePicker"
                    
                    
            
            />
        <Label x:Name="CurrentTimeLabel"
                       
            
            />

            <Button x:Name="BackToMainMenu"
                    Text="Back to menu"
                Clicked="OnBackToMainMenuClicked"
               />

        <Button x:Name="StartTimer"
                Text="Start timer"
                Clicked="OnTimerClicked"
   />
    </VerticalStackLayout>
</ContentPage>